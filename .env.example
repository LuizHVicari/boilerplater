DATABASE_URL=postgresql://postgres:password@localhost:5432/boilerplater
POOL_MAX_CONN=10

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=boilerplater
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Cache Configuration
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=

REDISINSIGHT_PORT=5540

# Cookie Configuration
COOKIES_SECURE=false
REFRESH_TOKEN_MAX_AGE=604800000

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EMAIL_VERIFICATION_SECRET=your-email-verification-secret-change-in-production
JWT_PASSWORD_RESET_SECRET=your-password-reset-secret-change-in-production

# JWT Token TTL (in seconds)
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
JWT_EMAIL_VERIFICATION_TOKEN_TTL=86400
JWT_PASSWORD_RESET_TOKEN_TTL=3600

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SECURE=false
EMAIL_SENDER=noreply@yourapp.com

# User Email Configuration
USER_EMAIL_APP_NAME=Your App Name
USER_EMAIL_SUPPORT_EMAIL=support@yourapp.com
USER_EMAIL_BASE_URL=https://yourapp.com
USER_EMAIL_VERIFICATION_PATH=/verify
USER_EMAIL_RESET_PASSWORD_PATH=/reset-password